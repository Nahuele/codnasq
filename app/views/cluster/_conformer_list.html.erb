<%= paginate @conformers %>

<table class="table is-bordered is-striped is-hoverable is-fullwidth">
  <tr>
    <th>Cluster</th>
    <th>PDB</th>
    <th>Resolution</th>
    <th>Length</th>
    <th>Name</th>
    <th>Organism</th>
    <th>UniProt</th>
  </tr>
  <% @conformers.each do |conformer| %>
    <tr>
      <td><%= link_to("CQ#{conformer.cluster.codnasq_id}", cluster_show_path(conformer.cluster)) %></td>
      <td><%= link_to(conformer.pdb_id, conformers_show_path(conformer.pdb_id)) %></td>
      <td><%= conformer.resolution %></td>
      <td><%= conformer.length %></td>
      <td><%= conformer.name %></td>
      <td><%= conformer.organism %></td>
      <td><%= conformer.uniprot_id %></td>
    </tr>
  <% end %>
</table>

<%= paginate @conformers %>
