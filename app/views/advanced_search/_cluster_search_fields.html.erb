          <div class="field">
            <div class="control">
              <input class="input" type="text" placeholder="min" name="minRMSDQ" value="0">
            </div>
          </div>
        </div>
        <div class="column is-one-fifth">
          <div class="field">
            <div class="control">
              <input class="input" type="text" placeholder="max" name="maxRMSDQ" value="9">
