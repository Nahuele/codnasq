<p class="menu-label">
  Cluster properties
</p>
<ul class="menu-list">
  <%= render partial: 'search_field', locals: { key: :cluster_id, label: 'Cluster ID' } %>
  <%#= render partial: 'search_field', locals: { key: :cluster_group, label: 'Group' } %>
